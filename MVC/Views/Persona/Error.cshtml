@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .container {
        margin-top: 50px;
        text-align: center;
    }

    .error-message {
        font-size: 18px;
        color: #ff0000;
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: #007bff;
        color: #ffffff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 16px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>

<link href="~/Content/error.css" rel="stylesheet" />

<div class="container">
    <h2>Ocurrió un error</h2>
    <p class="error-message">@ViewBag.ErrorMessage</p>
    <p><a href="@Url.Action("Index", "Home")" class="btn btn-primary">Regresar a la pantalla principal</a></p>
</div>
